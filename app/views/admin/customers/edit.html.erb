<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>


<h1>会員情報編集</h1>

<p>会員ID <%= @customer.id %></p>

<%= form_with model: @customer, url: admin_customer_path(@customer.id),  local:true do |f| %>
<p>
  氏名
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name %>
</p>

<p>
  フリガナ
  <%= f.text_field :first_name_kana %>
  <%= f.text_field :last_name_kana %>
</p>
<p>
  郵便番号
  <%= f.text_field :postal_code %>
</p>

<p>
  住所
  <%= f.text_field :address %>
</p>
<p>
  電話番号
  <%= f.telephone_field :telephone_number %>
</p>
<p>
  メールアドレス
  <%= f.email_field :email %>
</p>
<p>
  会員ステータス
  <%= f.radio_button :is_deleted, :true %>退会
  <%= f.radio_button :is_deleted, :false %>有効
</p>

<%= f.submit "編集内容を保存" %>
<% end %>