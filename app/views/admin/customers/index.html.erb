

<h1>会員一覧</h1>
<table class="table">
    <thead>
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <% @customers.each do |customer| %>
        <tbody>
            <tr>
                <td>
                   <%= customer.id %>
                </td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                  <div class="text-dark"><%= customer.first_name + customer.last_name %></div>
                  <% end %>
                </td>
                <td>
                  <%= customer.email %>
                </td>
                <td>
                  <% if customer.is_deleted == true %>
                  <div class="text-muted font-weight-bold">退会</div>
                  <% else %>
                  <div class="text-success font-weight-bold">有効</div>
                  <% end %>
                </td>
            </tr>
        </tbody>
    <% end %>
</table>





