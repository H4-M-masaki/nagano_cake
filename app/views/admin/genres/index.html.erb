<div class="container ml-auto">
<h1>ジャンル一覧・追加</h1>

<p>ジャンル名</p>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
<%= f.text_field :name %>
<%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
<% end %>
<div class="row">
    <div class="col-md-6">
      <table class="table">
    <thead>
        <tr>
            <th>ジャンル</th>
        </tr>
    </thead>
    <% @genres.each do |genre| %>
        <tbody>
            <tr>
                <td>
                   <%= genre.name %>
                </td>
                <td>
                  <button type="button" class="btn btn-success btn-sm">
                  <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "text-white" %>
                  </button>
                </td>
            </tr>
        </tbody>
    <% end %>
</table>
    </div>
</div>