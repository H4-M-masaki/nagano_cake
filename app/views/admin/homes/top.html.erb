<div class="container ml-auto">
<h1>注文履歴一覧</h1>
 <div class="row">
     <div class="col-md-8 offset-md-2">
        <table class="table">
    <thead>
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
        </tr>
    </thead>
    <% @orders.each do |order| %>
        <tbody>
            <tr>
                <td>
                   <%= link_to admin_order_path(order.id) do %>
                   <%= l order.created_at %>
                   <% end %>
                </td>
                <td><%= order.name %></td>
                <td><%= order.order_details.all.sum(:amount) %></td>
            </tr>
        </tbody>
    <% end %>
</table>
     </div>
    </div>
</div>