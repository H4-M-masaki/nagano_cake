<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path, local:true do |f| %>

<p>商品画像</p>
<%#= f.file.fields :image_id, accept: "image/*" %>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_field :introduction %>
<p>ジャンル</p>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<p>税抜価格</p>
<%= f.text_field :price %>
<p>販売ステータス</p>
<%= f.select :validation, { "販売中": true, "売り切れ": false } %> 

<%= f.submit "変更を保存" %>
<% end %>