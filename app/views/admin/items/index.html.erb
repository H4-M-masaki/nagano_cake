<div class="container ml-auto">
<h1>商品一覧</h1>

<%= link_to "+", new_admin_item_path, class: "btn btn-primary rounded-circle p-0", :style => "width:2rem;height:2rem;" %>
<table class="table">
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <% @items.zip(@genres) do |item, genre| %>
        <tbody>
            <tr>
                <td>
                   <%= item.id %>
                </td>
                <td>
                 <%= link_to admin_item_path(item.id) do %>
                 <div class="text-dark"><%= item.name %></div>
                 <% end %>
                </td>
                <td>
                  <%= item.price %>
                </td>
                <td><%= item.genre.name %></td>
                <td>
                  <% if item.is_active == true %>
                   <div class="text-success font-weight-bold">販売中</div>
                  <% else %>
                   <div class="text-muted font-weight-bold">販売停止中</div>
                  <% end %>
                </td>
            </tr>
        </tbody>
    <% end %>
</table>

</div>