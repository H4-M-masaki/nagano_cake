
<div class="container ml-auto">
<h1>商品新規登録</h1>

<%= form_with model: @item, url: admin_items_path, local:true do |f| %>
<p>商品画像</p>
<%= f.file_field :image, accept: "image/*" %>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_field :introduction %>
<p>ジャンル</p>
<%= f.collection_select :genre_id, Genre.all, :id, :name %>
<p>税抜価格</p>
<%= f.text_field :price %>円
<p>販売ステータス</p>
<%= f.select :validation, { "販売中": true, "売り切れ": false } %> 

<%= f.submit "新規登録", class: "btn btn-success btn-sm" %>

<% end %>

</div>