<h1>Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>


<h1>会員情報編集</h1>
<%= form_with model: @customer, url: public_customer_path(@customer.id),  local:true do |f| %>
<p>氏名</p>
<%= f.text_field :first_name %>
<%= f.text_field :last_name %>

<p>フリガナ</p>
<%= f.text_field :first_name_kana %>
<%= f.text_field :last_name_kana %>
<p>郵便番号</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>電話番号</p>
<%= f.telephone_field :telephone_number %>
<p>メールアドレス</p>
<%= f.email_field :email %>

<%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to "退会する", public_customers_quit_path %>
