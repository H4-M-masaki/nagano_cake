<div class="container ml-auto">
<h1>マイページ</h1>




      <div class="container">
         <div class="row">
           <div class="col-md-5 offset-md-2">
             <div class="font-weight-bold">登録情報
                <button type="button" class="btn btn-success btn-sm">
                <%= link_to "編集する", edit_public_customer_path,class: "text-white" %>
                </button>
              </div>
             
              <table class="table table-bordered">
                  <tr>
                    <th>
                      氏名
                    </th>
                    <td>
                     <%= @customer.first_name %> <%= @customer.last_name %>
                    </td>
                  </tr>
                 <tr>
                   <th>
                     カナ
                    </th>
                    <td>
                    <%= @customer.first_name_kana %> <%= @customer.last_name_kana %>
                    </td>
                  </tr>
                  <tr>
                   <th>
                    郵便番号
                    </th>
                    <td>
                      <%= @customer.postal_code %>
                    </td>
                  </tr>
                  <tr>
                   <th>
                    住所
                    </th>
                    <td>
                      <%= @customer.address %>
                    </td>
                  </tr>
                  <tr>
                   <th>
                    電話番号
                    </th>
                    <td>
                      <%= @customer.telephone_number %>
                    </td>
                  </tr>
                  <tr>
                   <th>
                    メールアドレス
                    </th>
                    <td>
                      <%= @customer.email %>
                    </td>
                  </tr>
              </table>
              <div class="font-weight-bold">配送先
                <button type="button" class="btn btn-primary btn-sm">
                <%= link_to "一覧を見る", public_deliveries_path,class: "text-white" %>
                </button>
              </div>
              
              
              
              <div class="font-weight-bold">注文履歴
                <button type="button" class="btn btn-primary btn-sm">
                <%= link_to "一覧を見る", public_orders_path,class: "text-white" %>
                </button>
              </div>
                            
              
            </div>
         </div>
      </div>


</div>