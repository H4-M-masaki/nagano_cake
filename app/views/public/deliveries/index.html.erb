<h1>配送先登録/一覧</h1>

<%= form_with model: @delivery, url: public_deliveries_path, local:true do |f| %>
<p>郵便番号(ハイフンなし)</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :name %>

<%= f.submit "新規登録",class: "btn btn-success btn-sm" %>
<% end %>

<table class="table table-bordered">
        <thead>
            <tr>
                <th>郵便番号</th>
                <th>住所</th>
                <th>宛名</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
                <th><%= delivery.postal_code %></th>
                <td><%= delivery.address %></td>
                <td><%= delivery.name %></td>
                <td>
                  <button type="button" class="btn btn-success btn-sm">
                    <%= link_to "編集する", edit_public_delivery_path(delivery.id),class: "text-white" %>
                  </button>
                  <button type="button" class="btn btn-danger btn-sm">
                    <%= link_to "削除する", public_delivery_path(delivery.id),class: "text-white", method: :delete %>
                  </button>
                </td>
            </tr>
            
            <% end %>
        </tbody>
    </table>










