<h1>配送先登録/一覧</h1>

<%= form_with model: @customer, url: public_deliveries_path, local:true do |f| %>
<p>郵便番号(ハイフンなし)</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :name %>


<%= f.submit "新規登録" %>
<% end %>


<% @customers.each do |customers| %>
<%= customers.postal_code %>
<%= customers.address %>
<%= customers.first_name %>
<%= customers.last_name %>
<% end %>
<%= link_to "編集する", edit_public_delivery_path(@customer) %>

