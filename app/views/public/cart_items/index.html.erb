

<h1>ショッピングカート</h1>

<p>商品名　単価（税込）　数量　小計</p>

<% @cart_items.each do |cart_item| %>
<%= cart_item.item.name %>

<%= cart_item.item.with_tax_price %>

<%= form_with model: [:public,cart_item], method: :patch, local: true do |f| %>
<%= f.select :amount, *[1..10] %>
<%= f.submit "変更" %>
<% end %>

<%= cart_item.subtotal %>
<%= link_to "削除", public_cart_item_path(cart_item.id), method: :delete %>
<% @total += cart_item.subtotal %>
<% end %>
合計金額<%= @total %><br>

<%= link_to "買い物を続ける", public_items_path %>
<%= link_to "情報入力に進む", new_public_order_path %>