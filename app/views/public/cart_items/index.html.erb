<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<h1>ショッピングカート</h1>

<p>商品名　単価（税込）　数量　小計</p>

<% @cart_items.each do |cart_item| %>
<%= cart_item.item.name %>

<%= cart_item.item.with_tax_price %>
<%= cart_item.amount %>
<%= form_with model: [:public,cart_item], method: :patch, local: true do |f| %>
<%= f.select :amount, *[1..10] %>
<%= f.submit "変更" %>
<%= link_to "削除", public_cart_item_path(cart_item.id), method: :delete %>
<% end %>
<%= cart_item.subtotal %>

<% @total += cart_item.subtotal %>
<% end %>
<%= @total %>
<%= link_to "情報入力に進む", new_public_order_path %>