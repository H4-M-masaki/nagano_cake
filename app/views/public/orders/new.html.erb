<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<h1>注文情報入力</h1>


<p>支払い方法</p>
<%= form_with model: @order, url: public_orders_check_path, local:true do |f| %>

<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

<p>お届け先</p>
<p><%= f.radio_button :address, "住所" %>
<%= f.label "ご自身の住所" %></p>
<%= current_customer.address %>

<p><%= f.radio_button :address, "登録済住所" %>
<%= f.label "登録済住所から選択" %></p>

<%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :delivery_display) %>
<%= f.submit "確認画面へ進む" %>
<% end %>