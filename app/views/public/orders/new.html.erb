<h1>Public::Orders#new</h1>
<p>Find me in app/views/public/orders/new.html.erb</p>

<h1>注文情報入力</h1>


<p>支払い方法</p>
<%= form_with model: @order, url: public_orders_check_path, method: :post, local:true do |f| %>

<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

<p>お届け先</p>
<%= f.radio_button :delivery_option, 0, checked: true %>
<%= f.label :delivery_id,"ご自身の住所", value: 0 %>
〒<%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.name %><br>
<%= f.radio_button :delivery_option, 1 %>
<%= f.label :delivery_id, "登録済住所から選択", value: 1 %>

<%= f.select :delivery_id, options_from_collection_for_select(Delivery.all, :id, :delivery_display) %><br>




<%= f.radio_button :delivery_option, 2 %>
<%= f.label :delivery_id, "新しいお届け先", value: 2 %>


<p>郵便番号</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :name %>



<%= f.submit "確認画面へ進む" %>
<% end %>