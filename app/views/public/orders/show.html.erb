<h1>注文履歴詳細</h1>


<p class="font-weight-bold">注文情報</p>
<table class="table table-bordered">
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>支払方法</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><%= @order.created_at.strftime('%Y/%m/%d')  %></th>
                <td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
                <td><%= @order.payment_method_i18n %></td>
            </tr>
        </tbody>
    </table>


<p class="font-weight-bold">請求情報</p>
<table class="table table-bordered">
        <thead>
            <tr>
                <th>商品合計</th>
                <th>配送料</th>
                <th>ご請求額</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th><%= @order.billing_amount %></th>
                <td><%= @order.postage %></td>
                <td><%= @order.billing_amount + @order.postage %></td>
            </tr>
        </tbody>
    </table>
    
<p class="font-weight-bold">注文内容</p>
<table class="table table-bordered">
        <thead>
            <tr>
                <th>商品</th>
                <th>単価（税込)</th>
                <th>個数</th>
                <th>小計</th>
            </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
                <th><%= order_detail.item.name %></th>
                <td><%= order_detail.item.with_tax_price %>円</td>
                <td><%= order_detail.amount %></td>
                <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
            </tr>
          <% end %>
        </tbody>
    </table>




